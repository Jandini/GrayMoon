@page "/agent"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@using GrayMoon.App.Services
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject AgentConnectionTracker AgentConnectionTracker

<PageTitle>Agent - GrayMoon</PageTitle>

<div class="container-fluid page-container">
    <div class="row mb-4">
        <div class="col-12">
            <h2>Agent</h2>
            <p class="text-muted">Install or uninstall the GrayMoon Agent Service</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link @(ActiveTab == "install" ? "active" : "")" type="button" role="tab" @onclick='() => SetActiveTab("install")'>@InstallTabLabel</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link @(ActiveTab == "uninstall" ? "active" : "")" type="button" role="tab" @onclick='() => SetActiveTab("uninstall")'>Uninstall</button>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content">
                        <div class="tab-pane @(ActiveTab == "install" ? "show active" : "")" role="tabpanel">
                            @if (AgentConnectionTracker.State == AgentConnectionState.VersionMismatch)
                            {
                                <p class="mb-3 small text-muted">The agent is running version <strong class="text-muted">@(AgentConnectionTracker.AgentSemVer ?? "unknown")</strong>, which is not compatible with this application. Run the command below to update.</p>
                            }
                            <p class="mb-3">Run this PowerShell command as Administrator to install the GrayMoon Agent as a Windows service:</p>
                            <div class="input-group">
                                <input type="text" class="form-control font-monospace bg-dark" id="installCommand" readonly
                                       value="@installCommand" />
                                <button class="btn btn-primary" type="button" @onclick="CopyInstallCommand">Copy</button>
                            </div>
                            <small class="text-muted mt-2 d-block">
                                The script will download, install, and start the agent service automatically.
                            </small>
                        </div>
                        <div class="tab-pane @(ActiveTab == "uninstall" ? "show active" : "")" role="tabpanel">
                            <p class="mb-3">Run this PowerShell command as Administrator to uninstall the GrayMoon Agent Windows service:</p>
                            <div class="input-group">
                                <input type="text" class="form-control font-monospace bg-dark" id="uninstallCommand" readonly
                                       value="@uninstallCommand" />
                                <button class="btn btn-outline-danger" type="button" @onclick="CopyUninstallCommand">Copy</button>
                            </div>
                            <small class="text-muted mt-2 d-block">
                                The script will stop and remove the agent service.
                            </small>
                        </div>
                    </div>
                </div>
                @if (ActiveTab == "install")
                {
                    <div class="card-footer card-footer-agent d-flex justify-content-between align-items-center">
                        <small class="text-muted">You can download and run the agent executable manually.</small>
                        <button type="button" class="btn btn-outline-secondary" @onclick="DownloadAgent">Download</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private string installCommand = string.Empty;
    private string uninstallCommand = string.Empty;
    private string ActiveTab = "install";

    protected override void OnInitialized()
    {
        var baseUrl = NavigationManager.BaseUri.TrimEnd('/');
        var installUrl = $"{baseUrl}/api/agent/install";
        installCommand = $"Set-ExecutionPolicy Bypass -Scope Process -Force; [System.Net.ServicePointManager]::SecurityProtocol = [System.Net.ServicePointManager]::SecurityProtocol -bor 3072; iex ((New-Object System.Net.WebClient).DownloadString('{installUrl}'))";
        var uninstallUrl = $"{baseUrl}/api/agent/uninstall";
        uninstallCommand = $"Set-ExecutionPolicy Bypass -Scope Process -Force; iex ((New-Object System.Net.WebClient).DownloadString('{uninstallUrl}'))";
        SetDefaultTab();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
            AgentConnectionTracker.OnStateChanged(_ => InvokeAsync(StateHasChanged));
    }

    private string InstallTabLabel => AgentConnectionTracker.State == AgentConnectionState.VersionMismatch ? "Update" : "Install";

    private void SetDefaultTab()
    {
        var state = AgentConnectionTracker.State;
        ActiveTab = (state == AgentConnectionState.Online) ? "uninstall" : "install";
    }

    private void SetActiveTab(string tab)
    {
        ActiveTab = tab;
    }

    private async Task DownloadAgent()
    {
        await JSRuntime.InvokeVoidAsync("graymoonDownloadAgent");
    }

    private async Task CopyInstallCommand()
    {
        await CopyToClipboard(installCommand);
    }

    private async Task CopyUninstallCommand()
    {
        await CopyToClipboard(uninstallCommand);
    }

    private async Task CopyToClipboard(string text)
    {
        await JSRuntime.InvokeVoidAsync("navigator.clipboard.writeText", text);
    }
}