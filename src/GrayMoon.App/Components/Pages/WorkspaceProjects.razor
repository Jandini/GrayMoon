@page "/workspaces/{WorkspaceId:int}/projects"
@rendermode InteractiveServer
@using GrayMoon.App.Models
@using GrayMoon.App.Repositories
@using GrayMoon.App.Components.Shared
@inject WorkspaceRepository WorkspaceRepository
@inject RepositoryProjectRepository RepositoryProjectRepository
@inject ILogger<WorkspaceProjects> Logger
@using WorkspaceModel = GrayMoon.App.Models.Workspace

<PageTitle>@(workspace?.Name ?? "Workspace") - Projects</PageTitle>

<div class="container-fluid page-container grid-page">
    <div class="grid-page-header">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2>@(workspace?.Name ?? "Workspace") Projects</h2>
                <p class="text-muted mb-0" style="min-height: 1.5rem;">
                    @if (projects.Count > 0)
                    {
                        @($"{projects.Count} {(projects.Count == 1 ? "project" : "projects")}")
                    }
                    &nbsp;
                </p>
            </div>
        </div>
        @if (errorMessage != null)
        {
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-triangle"></i> @errorMessage
            </div>
        }
    </div>
    @if (errorMessage == null)
    {
        <div class="grid-page-body">
            <div class="card page-card mb-4">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0 projects-table resizable-columns">
                            <thead class="table-dark">
                                <tr>
                                    <th class="col-name">Name</th>
                                    <th class="col-type">Type</th>
                                    <th class="col-framework">Framework</th>
                                    <th class="col-file">File</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (isLoading)
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted py-4">
                                            Loading projects...
                                        </td>
                                    </tr>
                                }
                                else if (projects.Count == 0)
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted py-4">
                                            No projects in this workspace. Sync repositories to discover .csproj projects.
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var p in projects)
                                    {
                                        <tr>
                                            <td class="col-name"><strong>@p.ProjectName</strong></td>
                                            <td class="col-type text-muted">@p.ProjectType</td>
                                            <td class="col-framework text-muted">@p.TargetFramework</td>
                                            <td class="col-file text-muted" title="@p.ProjectFilePath">@GetFileName(p.ProjectFilePath)</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<LoadingOverlay IsVisible="@isLoading" Message="Loading projects..." />

@code {
    [Parameter] public int WorkspaceId { get; set; }

    private WorkspaceModel? workspace;
    private List<RepositoryProject> projects = new();
    private string? errorMessage;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            workspace = await WorkspaceRepository.GetByIdAsync(WorkspaceId);
            if (workspace == null)
            {
                errorMessage = "Workspace not found.";
                projects = new List<RepositoryProject>();
                return;
            }
            projects = await RepositoryProjectRepository.GetByWorkspaceIdAsync(WorkspaceId);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading projects for workspace {WorkspaceId}", WorkspaceId);
            errorMessage = "Failed to load projects. Please try again later.";
            projects = new List<RepositoryProject>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private static string GetFileName(string path)
    {
        if (string.IsNullOrWhiteSpace(path)) return "-";
        var name = path.Replace('\\', '/');
        var last = name.LastIndexOf('/');
        return last >= 0 ? name[(last + 1)..] : name;
    }
}
