@page "/workspaces/{WorkspaceId:int}/packages"
@rendermode InteractiveServer
@using GrayMoon.App.Models
@using GrayMoon.App.Repositories
@using GrayMoon.App.Services
@using GrayMoon.App.Components.Shared
@inject WorkspaceRepository WorkspaceRepository
@inject WorkspaceProjectRepository WorkspaceProjectRepository
@inject PackageRegistrySyncService PackageRegistrySyncService
@inject ILogger<WorkspacePackages> Logger
@using WorkspaceModel = GrayMoon.App.Models.Workspace

<PageTitle>@(workspace?.Name ?? "Workspace") - Packages</PageTitle>

<div class="container-fluid page-container grid-page">
    <div class="grid-page-header">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2>@(workspace?.Name ?? "Workspace") Packages</h2>
                <p class="text-muted mb-0" style="min-height: 1.5rem;">
                    @if (packages.Count > 0)
                    {
                        @($"{packages.Count} {(packages.Count == 1 ? "package" : "packages")}")
                    }
                    &nbsp;
                </p>
            </div>
            <button class="btn btn-outline-primary"
                    @onclick="SyncRegistriesAsync"
                    disabled="@(isSyncingRegistries || packages.Count == 0)">
                @if (isSyncingRegistries)
                {
                    <span class="spinner-border spinner-border-sm me-1" aria-hidden="true"></span>
                }
                Sync registries
            </button>
        </div>
        @if (errorMessage != null)
        {
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-triangle"></i> @errorMessage
            </div>
        }
    </div>
    @if (errorMessage == null)
    {
        <div class="grid-page-body">
            <div class="card page-card mb-4">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0 packages-table resizable-columns">
                            <thead class="table-dark">
                                <tr>
                                    <th class="col-packageid">Package Id</th>
                                    <th class="col-framework">Framework</th>
                                    <th class="col-registry">Registry</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (isLoading)
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted py-4">
                                            Loading packages...
                                        </td>
                                    </tr>
                                }
                                else if (packages.Count == 0)
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted py-4">
                                            No NuGet packages in this workspace. Sync repositories to discover package projects.
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var p in packages)
                                    {
                                        <tr>
                                            <td class="col-packageid"><strong>@(p.PackageId ?? "-")</strong></td>
                                            <td class="col-framework"><span class="badge bg-secondary">@(p.TargetFramework ?? "-")</span></td>
                                            <td class="col-registry text-muted">@(p.MatchedConnector?.ConnectorName ?? "-")</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<LoadingOverlay IsVisible="@isLoading" Message="Loading packages..." />

@code {
    [Parameter] public int WorkspaceId { get; set; }

    private WorkspaceModel? workspace;
    private List<WorkspaceProject> packages = new();
    private string? errorMessage;
    private bool isLoading = true;
    private bool isSyncingRegistries = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            workspace = await WorkspaceRepository.GetByIdAsync(WorkspaceId);
            if (workspace == null)
            {
                errorMessage = "Workspace not found.";
                packages = new List<WorkspaceProject>();
                return;
            }
            packages = await WorkspaceProjectRepository.GetPackagesByWorkspaceIdAsync(WorkspaceId);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading packages for workspace {WorkspaceId}", WorkspaceId);
            errorMessage = "Failed to load packages. Please try again later.";
            packages = new List<WorkspaceProject>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task SyncRegistriesAsync()
    {
        if (workspace == null || isSyncingRegistries || packages.Count == 0) return;
        try
        {
            isSyncingRegistries = true;
            errorMessage = null;
            await InvokeAsync(StateHasChanged);
            await PackageRegistrySyncService.SyncWorkspacePackageRegistriesAsync(WorkspaceId, cancellationToken: default);
            await LoadAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error syncing package registries for workspace {WorkspaceId}", WorkspaceId);
            errorMessage = "Failed to sync registries. Please try again.";
        }
        finally
        {
            isSyncingRegistries = false;
            await InvokeAsync(StateHasChanged);
        }
    }
}
