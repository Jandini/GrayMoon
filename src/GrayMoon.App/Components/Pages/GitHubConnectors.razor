@page "/github-connectors"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@using System.ComponentModel.DataAnnotations
@using GrayMoon.App.Models
@using GrayMoon.App.Repositories
@using GrayMoon.App.Services
@inject IConfiguration Configuration
@inject GitHubConnectorRepository ConnectorRepository
@inject GitHubService GitHubService
@inject ILogger<GitHubConnectors> Logger

<PageTitle>GitHub Connectors - GrayMoon</PageTitle>

<div class="container-fluid page-container">
    <div class="page-header d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>GitHub Connectors</h2>
            <p class="text-muted mb-0" style="min-height: 1.5rem;">
                @if (connectors?.Count > 0)
                {
                    @($"{connectors.Count} {(connectors.Count == 1 ? "connector" : "connectors")}")
                }
                &nbsp;
            </p>
        </div>
        <button class="btn btn-primary" @onclick="ShowCreateModal">
            Add Connector
        </button>
    </div>

    @if (errorMessage != null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> @errorMessage
        </div>
    }
    else
    {
        <div class="card page-card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <div class="connector-list rounded">
                        <div class="connector-list-body">
                            <div class="connector-list-body-inner">
                            <table class="table table-dark table-striped table-hover mb-0 connectors-table">
                                <thead>
                                    <tr>
                                        <th class="col-name">Name</th>
                                        <th class="col-api">API Base URL</th>
                                        <th class="col-active">Active</th>
                                        <th class="col-status">Status</th>
                                        <th class="col-actions">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (connectors == null)
                                    {
                                        <tr>
                                            <td colspan="5" class="text-center text-muted py-4">
                                                Loading connectors...
                                            </td>
                                        </tr>
                                    }
                                    else if (connectors.Count == 0)
                                    {
                                        <tr>
                                            <td colspan="5" class="text-center text-muted py-4">
                                                No connectors found. Add your first GitHub connector to get started.
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        @foreach (var connector in connectors)
                                        {
                                            <tr>
                                                <td class="col-name"><strong>@connector.ConnectorName</strong></td>
                                                <td class="col-api">@connector.ApiBaseUrl</td>
                                                <td class="col-active text-center">
                                                    <div class="form-check form-switch d-inline-flex align-items-center m-0">
                                                        <input class="form-check-input"
                                                               type="checkbox"
                                                               role="switch"
                                                               checked="@connector.IsActive"
                                                               aria-label="Toggle connector active"
                                                               disabled="@(testingConnectorId == connector.GitHubConnectorId || togglingConnectorId == connector.GitHubConnectorId)"
                                                               @onchange="(args) => ToggleConnectorAsync(connector, args)" />
                                                    </div>
                                                </td>
                                                <td class="col-status status-col">
                                                    <span class="badge @GetStatusBadgeClass(connector)"
                                                          title="@GetStatusTitle(connector)">
                                                        @GetStatusLabel(connector)
                                                    </span>
                                                </td>
                                                <td class="col-actions actions-col">
                                                    <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => ShowEditModal(connector)">Edit</button>
                                                    <button class="btn btn-sm btn-outline-danger me-2" @onclick="() => ShowDeleteModal(connector)">Delete</button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (showCreateModal)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add GitHub Connector</h5>
                    <button type="button" class="btn-close" @onclick="CloseCreateModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="@createModel" OnValidSubmit="@HandleCreateConnector">
                        <DataAnnotationsValidator />
                        <div class="mb-3">
                            <label class="form-label">Connector Name <span class="text-danger">*</span></label>
                            <InputText class="form-control" @bind-Value="createModel.ConnectorName" />
                            <ValidationMessage For="@(() => createModel.ConnectorName)" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">API Base URL <span class="text-danger">*</span></label>
                            <InputText class="form-control" @bind-Value="createModel.ApiBaseUrl" />
                            <ValidationMessage For="@(() => createModel.ApiBaseUrl)" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">User Token <span class="text-danger">*</span></label>
                            <InputText class="form-control" type="password" @bind-Value="createModel.UserToken" />
                            <ValidationMessage For="@(() => createModel.UserToken)" />
                        </div>
                        @if (createErrorMessage != null)
                        {
                            <div class="alert alert-danger">@createErrorMessage</div>
                        }
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseCreateModal">Cancel</button>
                            <button type="submit" class="btn btn-primary" disabled="@isCreating">
                                @if (isCreating)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                Add
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@if (showEditModal)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit GitHub Connector</h5>
                    <button type="button" class="btn-close" @onclick="CloseEditModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="@editModel" OnValidSubmit="@HandleUpdateConnector">
                        <DataAnnotationsValidator />
                        <div class="mb-3">
                            <label class="form-label">Connector Name <span class="text-danger">*</span></label>
                            <InputText class="form-control" @bind-Value="editModel.ConnectorName" />
                            <ValidationMessage For="@(() => editModel.ConnectorName)" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">API Base URL <span class="text-danger">*</span></label>
                            <InputText class="form-control" @bind-Value="editModel.ApiBaseUrl" />
                            <ValidationMessage For="@(() => editModel.ApiBaseUrl)" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">User Token <span class="text-danger">*</span></label>
                            <InputText class="form-control" type="password" @bind-Value="editModel.UserToken" />
                            <ValidationMessage For="@(() => editModel.UserToken)" />
                        </div>
                        @if (editErrorMessage != null)
                        {
                            <div class="alert alert-danger">@editErrorMessage</div>
                        }
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseEditModal">Cancel</button>
                            <button type="submit" class="btn btn-primary" disabled="@isUpdating">
                                @if (isUpdating)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                    <span>Updating...</span>
                                }
                                else
                                {
                                    <span>Update</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@if (showDeleteModal && selectedConnector != null)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete GitHub Connector</h5>
                    <button type="button" class="btn-close" @onclick="CloseDeleteModal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete <strong>@selectedConnector.ConnectorName</strong>?</p>
                    @if (deleteErrorMessage != null)
                    {
                        <div class="alert alert-danger">@deleteErrorMessage</div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseDeleteModal">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="HandleDeleteConnector" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<GitHubConnector>? connectors;
    private string? errorMessage;
    private bool showCreateModal;
    private bool showEditModal;
    private bool showDeleteModal;

    private GitHubConnectorForm createModel = new();
    private GitHubConnectorForm editModel = new();
    private int editConnectorId;
    private GitHubConnector? selectedConnector;
    private int? testingConnectorId;
    private int? togglingConnectorId;

    private bool isCreating;
    private bool isUpdating;
    private bool isDeleting;

    private string? createErrorMessage;
    private string? editErrorMessage;
    private string? deleteErrorMessage;
    private string defaultUserToken = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        defaultUserToken = Configuration["GitHub__PersonalAccessToken"]
            ?? Configuration["GitHub:PersonalAccessToken"]
            ?? Configuration["GitHub::PersonalAccessToken"]
            ?? string.Empty;
        await LoadConnectorsAsync();
    }

    private async Task LoadConnectorsAsync()
    {
        try
        {
            errorMessage = null;
            connectors = await ConnectorRepository.GetAllAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading GitHub connectors.");
            errorMessage = $"Failed to load connectors: {ex.Message}";
        }
    }

    private void ShowCreateModal()
    {
        createModel = new GitHubConnectorForm
        {
            UserToken = defaultUserToken
        };
        createErrorMessage = null;
        showCreateModal = true;
    }

    private void CloseCreateModal()
    {
        showCreateModal = false;
        createErrorMessage = null;
    }

    private async Task HandleCreateConnector()
    {
        try
        {
            isCreating = true;
            createErrorMessage = null;

            var connector = new GitHubConnector
            {
                ConnectorName = createModel.ConnectorName.Trim(),
                ApiBaseUrl = createModel.ApiBaseUrl.Trim(),
                UserToken = createModel.UserToken.Trim(),
                IsActive = true,
                Status = "Testing",
                LastError = null
            };

            var savedConnector = await ConnectorRepository.AddAsync(connector);
            showCreateModal = false;
            await LoadConnectorsAsync();
            StateHasChanged();
            await TestConnectorAsync(savedConnector);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error creating GitHub connector.");
            createErrorMessage = ex.Message;
        }
        finally
        {
            isCreating = false;
        }
    }

    private void ShowEditModal(GitHubConnector connector)
    {
        selectedConnector = connector;
        editConnectorId = connector.GitHubConnectorId;
        editModel = new GitHubConnectorForm
        {
            ConnectorName = connector.ConnectorName,
            ApiBaseUrl = connector.ApiBaseUrl,
            UserToken = string.IsNullOrWhiteSpace(connector.UserToken)
                ? defaultUserToken
                : connector.UserToken
        };

        editErrorMessage = null;
        showEditModal = true;
    }

    private void CloseEditModal()
    {
        showEditModal = false;
        editErrorMessage = null;
    }

    private async Task HandleUpdateConnector()
    {
        try
        {
            isUpdating = true;
            editErrorMessage = null;

            var connector = new GitHubConnector
            {
                GitHubConnectorId = editConnectorId,
                ConnectorName = editModel.ConnectorName.Trim(),
                ApiBaseUrl = editModel.ApiBaseUrl.Trim(),
                UserToken = editModel.UserToken.Trim(),
                IsActive = selectedConnector?.IsActive ?? true,
                Status = "Testing",
                LastError = null
            };

            var savedConnector = await ConnectorRepository.UpdateAsync(connector);
            showEditModal = false;
            await LoadConnectorsAsync();
            StateHasChanged();
            await TestConnectorAsync(savedConnector);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error updating GitHub connector.");
            editErrorMessage = ex.Message;
        }
        finally
        {
            isUpdating = false;
        }
    }

    private void ShowDeleteModal(GitHubConnector connector)
    {
        selectedConnector = connector;
        deleteErrorMessage = null;
        showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        deleteErrorMessage = null;
    }

    private async Task HandleDeleteConnector()
    {
        if (selectedConnector == null)
        {
            return;
        }

        try
        {
            isDeleting = true;
            deleteErrorMessage = null;
            await ConnectorRepository.DeleteAsync(selectedConnector.GitHubConnectorId);
            showDeleteModal = false;
            await LoadConnectorsAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting GitHub connector.");
            deleteErrorMessage = ex.Message;
        }
        finally
        {
            isDeleting = false;
        }
    }

    private async Task<bool> TestConnectorAsync(GitHubConnector connector)
    {
        try
        {
            testingConnectorId = connector.GitHubConnectorId;
            await ConnectorRepository.UpdateStatusAsync(connector.GitHubConnectorId, "Testing", null);
            await LoadConnectorsAsync();
            StateHasChanged();

            await GitHubService.TestConnectionAsync(connector);
            await ConnectorRepository.UpdateStatusAsync(connector.GitHubConnectorId, "Ok", null);
            return true;
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error testing GitHub connector.");
            await ConnectorRepository.UpdateStatusAsync(connector.GitHubConnectorId, "Error", ex.Message);
            return false;
        }
        finally
        {
            testingConnectorId = null;
            await LoadConnectorsAsync();
        }
    }

    private async Task ToggleConnectorAsync(GitHubConnector connector, ChangeEventArgs args)
    {
        var isActive = args.Value is bool value
            ? value
            : string.Equals(args.Value?.ToString(), "true", StringComparison.OrdinalIgnoreCase);

        try
        {
            togglingConnectorId = connector.GitHubConnectorId;
            await ConnectorRepository.UpdateIsActiveAsync(connector.GitHubConnectorId, isActive);
            await LoadConnectorsAsync();

            if (isActive)
            {
                var ok = await TestConnectorAsync(connector);
                if (!ok)
                {
                    await ConnectorRepository.UpdateIsActiveAsync(connector.GitHubConnectorId, false);
                    await LoadConnectorsAsync();
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error toggling GitHub connector active state.");
            errorMessage = $"Failed to update connector status: {ex.Message}";
        }
        finally
        {
            togglingConnectorId = null;
        }
    }

    private class GitHubConnectorForm
    {
        [Required]
        [MaxLength(100)]
        public string ConnectorName { get; set; } = "GitHub";

        [Required]
        [MaxLength(300)]
        public string ApiBaseUrl { get; set; } = "https://api.github.com/";

        [Required]
        [MaxLength(500)]
        public string UserToken { get; set; } = string.Empty;
    }

    private static string GetStatusLabel(GitHubConnector connector)
    {
        return connector.Status switch
        {
            "Testing" => "Testing",
            "Ok" => "OK",
            "Error" => "Error",
            _ => "Unknown"
        };
    }

    private static string GetStatusBadgeClass(GitHubConnector connector)
    {
        return connector.Status switch
        {
            "Testing" => "bg-secondary",
            "Ok" => "bg-success",
            "Error" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private static string GetStatusTitle(GitHubConnector connector)
    {
        return connector.Status switch
        {
            "Testing" => "Testing connection...",
            "Error" => string.IsNullOrWhiteSpace(connector.LastError) ? "Connection failed." : connector.LastError,
            "Ok" => "Connection OK.",
            _ => "Not tested yet."
        };
    }
}
