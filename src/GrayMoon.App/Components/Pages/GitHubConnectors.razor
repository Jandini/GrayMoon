@page "/github-connectors"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@using GrayMoon.App.Models
@using GrayMoon.App.Repositories
@using GrayMoon.App.Services
@inject IConfiguration Configuration
@inject ConnectorRepository ConnectorRepository
@inject GitHubService GitHubService
@inject ILogger<GitHubConnectors> Logger

<PageTitle>GitHub Connectors - GrayMoon</PageTitle>

<div class="container-fluid page-container grid-page">
    <div class="grid-page-header">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2>GitHub Connectors</h2>
                <p class="text-muted mb-0" style="min-height: 1.5rem;">
                    @if (connectors?.Count > 0)
                    {
                        @($"{connectors.Count} {(connectors.Count == 1 ? "connector" : "connectors")}")
                    }
                    &nbsp;
                </p>
            </div>
            <button class="btn btn-primary" @onclick="ShowCreateModal">
                Add Connector
            </button>
        </div>
        @if (errorMessage != null)
        {
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-triangle"></i> @errorMessage
            </div>
        }
    </div>
    @if (errorMessage == null)
    {
        <div class="grid-page-body">
            <div class="card page-card mb-4">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0 connectors-table">
                        <thead class="table-dark">
                            <tr>
                                <th>Name</th>
                                <th>API Base URL</th>
                                <th>User Name</th>
                                <th class="text-center">Active</th>
                                <th class="status-col">Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (connectors == null)
                            {
                                <tr>
                                    <td colspan="6" class="text-center py-5">
                                        <div class="spinner-border text-primary" role="status">
                                            <span class="visually-hidden">Loading...</span>
                                        </div>
                                        <p class="text-muted mt-2 mb-0">Loading connectors...</p>
                                    </td>
                                </tr>
                            }
                            else if (connectors.Count == 0)
                            {
                                <tr>
                                    <td colspan="6" class="text-center text-muted py-4">
                                        No connectors found. Add your first GitHub connector to get started.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var connector in connectors)
                                {
                                    <tr>
                                        <td><strong>@connector.ConnectorName</strong></td>
                                        <td>@connector.ApiBaseUrl</td>
                                        <td>@connector.UserName</td>
                                        <td class="text-center">
                                            <div class="form-check form-switch d-inline-flex align-items-center m-0">
                                                <input class="form-check-input"
                                                       type="checkbox"
                                                       role="switch"
                                                       checked="@connector.IsActive"
                                                       aria-label="Toggle connector active"
                                                       disabled="@(testingConnectorId == connector.ConnectorId || togglingConnectorId == connector.ConnectorId)"
                                                       @onchange="(args) => ToggleConnectorAsync(connector, args)" />
                                            </div>
                                        </td>
                                        <td class="status-col">
                                            <span class="badge @GetStatusBadgeClass(connector)"
                                                  title="@GetStatusTitle(connector)">
                                                @GetStatusLabel(connector)
                                            </span>
                                        </td>
                                        <td class="actions-col">
                                            <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => ShowEditModal(connector)">Edit</button>
                                            <button class="btn btn-sm btn-outline-danger me-2" @onclick="() => ShowDeleteModal(connector)">Delete</button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        </div>
    }
</div>

<GitHubConnectorModal IsVisible="@showCreateModal"
                     Mode="GitHubConnectorModalMode.Create"
                     Title="Add GitHub Connector"
                     Model="@createModel"
                     IsSubmitting="@isCreating"
                     ErrorMessage="@createErrorMessage"
                     OnSubmit="HandleCreateConnector"
                     OnCancel="CloseCreateModal" />

<GitHubConnectorModal IsVisible="@showEditModal"
                     Mode="GitHubConnectorModalMode.Edit"
                     Title="Edit GitHub Connector"
                     Model="@editModel"
                     IsSubmitting="@isUpdating"
                     ErrorMessage="@editErrorMessage"
                     OnSubmit="HandleUpdateConnector"
                     OnCancel="CloseEditModal" />

<GitHubConnectorModal IsVisible="@(showDeleteModal && selectedConnector != null)"
                     Mode="GitHubConnectorModalMode.Delete"
                     Title="Delete GitHub Connector"
                     ConnectorName="@(selectedConnector?.ConnectorName ?? string.Empty)"
                     IsSubmitting="@isDeleting"
                     ErrorMessage="@deleteErrorMessage"
                     OnDelete="HandleDeleteConnector"
                     OnCancel="CloseDeleteModal" />

@code {
    private List<Connector>? connectors;
    private string? errorMessage;
    private bool showCreateModal;
    private bool showEditModal;
    private bool showDeleteModal;

    private GitHubConnectorForm createModel = new();
    private GitHubConnectorForm editModel = new();
    private int editConnectorId;
    private Connector? selectedConnector;
    private int? testingConnectorId;
    private int? togglingConnectorId;

    private bool isCreating;
    private bool isUpdating;
    private bool isDeleting;

    private string? createErrorMessage;
    private string? editErrorMessage;
    private string? deleteErrorMessage;
    private string defaultUserToken = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        defaultUserToken = Configuration["GitHub__PersonalAccessToken"]
            ?? Configuration["GitHub:PersonalAccessToken"]
            ?? Configuration["GitHub::PersonalAccessToken"]
            ?? string.Empty;
        await LoadConnectorsAsync();
    }

    private async Task LoadConnectorsAsync()
    {
        try
        {
            errorMessage = null;
            connectors = await ConnectorRepository.GetAllAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading GitHub connectors.");
            errorMessage = $"Failed to load connectors: {ex.Message}";
        }
    }

    private void ShowCreateModal()
    {
        createModel = new GitHubConnectorForm
        {
            UserToken = defaultUserToken
        };
        createErrorMessage = null;
        showCreateModal = true;
    }

    private void CloseCreateModal()
    {
        showCreateModal = false;
        createErrorMessage = null;
    }

    private async Task HandleCreateConnector()
    {
        try
        {
            isCreating = true;
            createErrorMessage = null;

            var connector = new Connector
            {
                ConnectorName = createModel.ConnectorName.Trim(),
                ApiBaseUrl = createModel.ApiBaseUrl.Trim(),
                UserName = string.IsNullOrWhiteSpace(createModel.UserName) ? null : createModel.UserName.Trim(),
                UserToken = createModel.UserToken.Trim(),
                IsActive = true,
                Status = "Testing",
                LastError = null
            };

            var savedConnector = await ConnectorRepository.AddAsync(connector);
            showCreateModal = false;
            isCreating = false;
            StateHasChanged();
            await LoadConnectorsAsync();
            await TestConnectorAsync(savedConnector);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error creating GitHub connector.");
            createErrorMessage = ex.Message;
        }
        finally
        {
            isCreating = false;
        }
    }

    private void ShowEditModal(Connector connector)
    {
        selectedConnector = connector;
        editConnectorId = connector.ConnectorId;
        editModel = new GitHubConnectorForm
        {
            ConnectorName = connector.ConnectorName,
            ApiBaseUrl = connector.ApiBaseUrl,
            UserName = connector.UserName,
            UserToken = string.IsNullOrWhiteSpace(connector.UserToken)
                ? defaultUserToken
                : connector.UserToken
        };

        editErrorMessage = null;
        showEditModal = true;
    }

    private void CloseEditModal()
    {
        showEditModal = false;
        editErrorMessage = null;
    }

    private async Task HandleUpdateConnector()
    {
        try
        {
            isUpdating = true;
            editErrorMessage = null;

            var connector = new Connector
            {
                ConnectorId = editConnectorId,
                ConnectorName = editModel.ConnectorName.Trim(),
                ApiBaseUrl = editModel.ApiBaseUrl.Trim(),
                UserName = string.IsNullOrWhiteSpace(editModel.UserName) ? null : editModel.UserName.Trim(),
                UserToken = editModel.UserToken.Trim(),
                IsActive = selectedConnector?.IsActive ?? true,
                Status = "Testing",
                LastError = null
            };

            var savedConnector = await ConnectorRepository.UpdateAsync(connector);
            showEditModal = false;
            isUpdating = false;
            StateHasChanged();
            await LoadConnectorsAsync();
            await TestConnectorAsync(savedConnector);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error updating GitHub connector.");
            editErrorMessage = ex.Message;
        }
        finally
        {
            isUpdating = false;
        }
    }

    private void ShowDeleteModal(Connector connector)
    {
        selectedConnector = connector;
        deleteErrorMessage = null;
        showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        deleteErrorMessage = null;
    }

    private async Task HandleDeleteConnector()
    {
        if (selectedConnector == null)
        {
            return;
        }

        try
        {
            isDeleting = true;
            deleteErrorMessage = null;
            await ConnectorRepository.DeleteAsync(selectedConnector.ConnectorId);
            showDeleteModal = false;
            await LoadConnectorsAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting GitHub connector.");
            deleteErrorMessage = ex.Message;
        }
        finally
        {
            isDeleting = false;
        }
    }

    private async Task<bool> TestConnectorAsync(Connector connector)
    {
        try
        {
            testingConnectorId = connector.ConnectorId;
            await ConnectorRepository.UpdateStatusAsync(connector.ConnectorId, "Testing", null);
            await LoadConnectorsAsync();
            StateHasChanged();

            await GitHubService.TestConnectionAsync(connector);
            await ConnectorRepository.UpdateStatusAsync(connector.ConnectorId, "Ok", null);
            return true;
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error testing GitHub connector.");
            await ConnectorRepository.UpdateStatusAsync(connector.ConnectorId, "Error", ex.Message);
                await ConnectorRepository.UpdateIsActiveAsync(connector.ConnectorId, false);
            return false;
        }
        finally
        {
            testingConnectorId = null;
            await LoadConnectorsAsync();
        }
    }

    private async Task ToggleConnectorAsync(Connector connector, ChangeEventArgs args)
    {
        var isActive = args.Value is bool value
            ? value
            : string.Equals(args.Value?.ToString(), "true", StringComparison.OrdinalIgnoreCase);

        try
        {
            togglingConnectorId = connector.ConnectorId;
            await ConnectorRepository.UpdateIsActiveAsync(connector.ConnectorId, isActive);
            await LoadConnectorsAsync();

            if (isActive)
            {
                var ok = await TestConnectorAsync(connector);
                if (!ok)
                {
                    await ConnectorRepository.UpdateIsActiveAsync(connector.ConnectorId, false);
                    await LoadConnectorsAsync();
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error toggling GitHub connector active state.");
            errorMessage = $"Failed to update connector status: {ex.Message}";
        }
        finally
        {
            togglingConnectorId = null;
        }
    }

    private static string GetStatusLabel(Connector connector)
    {
        return connector.Status switch
        {
            "Testing" => "Testing",
            "Ok" => "OK",
            "Error" => "Error",
            _ => "Unknown"
        };
    }

    private static string GetStatusBadgeClass(Connector connector)
    {
        return connector.Status switch
        {
            "Testing" => "status-badge-testing",
            "Ok" => "status-badge-ok",
            "Error" => "status-badge-error",
            _ => "status-badge-unknown"
        };
    }

    private static string GetStatusTitle(Connector connector)
    {
        return connector.Status switch
        {
            "Testing" => "Testing connection...",
            "Error" => string.IsNullOrWhiteSpace(connector.LastError) ? "Connection failed." : connector.LastError,
            "Ok" => "Connection OK.",
            _ => "Not tested yet."
        };
    }
}
