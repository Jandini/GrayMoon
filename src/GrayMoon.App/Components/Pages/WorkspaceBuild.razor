@page "/workspaces/{WorkspaceId:int}/build"
@rendermode InteractiveServer
@implements IDisposable
@using GrayMoon.App.Models
@using GrayMoon.App.Repositories
@using GrayMoon.App.Services
@using GrayMoon.App.Components.Shared
@using Microsoft.AspNetCore.SignalR.Client
@inject WorkspaceRepository WorkspaceRepository
@inject WorkspaceProjectRepository WorkspaceProjectRepository
@inject WorkspaceGitService WorkspaceGitService
@inject NavigationManager NavigationManager
@inject ILogger<WorkspaceBuild> Logger
@using WorkspaceModel = GrayMoon.App.Models.Workspace

<PageTitle>@(workspace?.Name ?? "Workspace") - Build</PageTitle>

<div class="container-fluid page-container grid-page">
    <div class="grid-page-header">
            <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2>@(workspace?.Name ?? "Workspace") Build</h2>
                <p class="text-muted mb-0" style="min-height: 1.5rem;">
                    @if (rows.Count > 0)
                    {
                        @($"{rows.Count} {(rows.Count == 1 ? "repository" : "repositories")} in build order.")
                    }
                    &nbsp;
                </p>
            </div>
            <div class="d-flex gap-2">
                <button class="btn @(hasMismatchedDependencies ? "btn-danger" : "btn-primary")"
                        @onclick="SyncAsync"
                        disabled="@(isSyncingDependencies || workspace == null)">
                    Sync
                </button>
            </div>
        </div>
        @if (errorMessage != null)
        {
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-triangle"></i> @errorMessage
            </div>
        }
    </div>
    @if (errorMessage == null)
    {
        <div class="grid-page-body">
            <div class="card page-card mb-4">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0 build-order-table resizable-columns">
                            <thead class="table-dark">
                                <tr>
                                    <th class="col-repository">Repository</th>
                                    <th class="col-version">Version</th>
                                    <th class="col-sequence">Sequence</th>
                                    <th class="col-dependencies col-status-badge">Dependencies</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (isLoading)
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted py-4">
                                            Loading build order...
                                        </td>
                                    </tr>
                                }
                                else if (rows.Count == 0)
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted py-4">
                                            No repositories in build order. Sync repositories to discover projects and dependencies.
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var row in rows)
                                    {
                                        <tr>
                                            <td class="col-repository">@row.RepositoryName</td>
                                            <td class="col-version text-muted">@(row.Version ?? "-")</td>
                                            <td class="col-sequence">@row.Sequence</td>
                                            <td class="col-dependencies col-status-badge">
                                                @if (row.DependencyCount == 0)
                                                {
                                                    <span class="badge build-dep-badge build-dep-badge-none">0</span>
                                                }
                                                else if (row.UnmatchedDependencyCount == 0)
                                                {
                                                    <span class="badge build-dep-badge build-dep-badge-ok">@row.DependencyCount</span>
                                                }
                                                else
                                                {
                                                    <span class="badge build-dep-badge build-dep-badge-mismatch">@row.UnmatchedDependencyCount of @row.DependencyCount</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<LoadingOverlay IsVisible="@isLoading" Message="Loading build order..." />
<LoadingOverlay IsVisible="@isSyncingDependencies" Message="@syncDependenciesProgressMessage" OnAbort="AbortSyncDependenciesAsync" />

@code {
    [Parameter] public int WorkspaceId { get; set; }

    private WorkspaceModel? workspace;
    private List<RepositoryBuildOrderRow> rows = new();
    private string? errorMessage;
    private bool isLoading = true;
    private bool isSyncingDependencies = false;
    private string syncDependenciesProgressMessage = "Syncing dependencies...";
    private CancellationTokenSource? _syncDependenciesCts;
    private HubConnection? _hubConnection;

    private bool hasMismatchedDependencies => rows.Any(r => r.UnmatchedDependencyCount > 0);

    public void Dispose()
    {
        _ = _hubConnection?.StopAsync();
        _hubConnection?.DisposeAsync();
        _syncDependenciesCts?.Cancel();
        _syncDependenciesCts?.Dispose();
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && workspace != null && errorMessage == null)
        {
            _hubConnection = new HubConnectionBuilder()
                .WithUrl(NavigationManager.ToAbsoluteUri("/hubs/workspace-sync"))
                .WithAutomaticReconnect()
                .Build();
            _hubConnection.On<int>("WorkspaceSynced", async (workspaceId) =>
            {
                if (workspaceId == WorkspaceId)
                    await InvokeAsync(RefreshFromSync);
            });
            await _hubConnection.StartAsync();
        }
    }

    private async Task RefreshFromSync()
    {
        if (isSyncingDependencies)
            return;
        await LoadAsync();
        await InvokeAsync(StateHasChanged);
    }

    private async Task LoadAsync()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            workspace = await WorkspaceRepository.GetByIdAsync(WorkspaceId);
            if (workspace == null)
            {
                errorMessage = "Workspace not found.";
                rows = new List<RepositoryBuildOrderRow>();
                return;
            }
            rows = await WorkspaceProjectRepository.GetRepositoryBuildOrderAsync(WorkspaceId);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading build order for workspace {WorkspaceId}", WorkspaceId);
            errorMessage = "Failed to load build order. Please try again later.";
            rows = new List<RepositoryBuildOrderRow>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private void AbortSyncDependenciesAsync()
    {
        _syncDependenciesCts?.Cancel();
    }

    private async Task SyncAsync()
    {
        if (workspace == null || isSyncingDependencies)
            return;

        _syncDependenciesCts?.Cancel();
        _syncDependenciesCts?.Dispose();
        _syncDependenciesCts = new CancellationTokenSource();

        isSyncingDependencies = true;
        syncDependenciesProgressMessage = "Refreshing projects...";
        errorMessage = null;
        StateHasChanged();
        await Task.Yield();

        try
        {
            await WorkspaceGitService.RefreshWorkspaceProjectsAsync(
                WorkspaceId,
                onProgress: (completed, total, _) =>
                {
                    syncDependenciesProgressMessage = $"Refreshing projects {completed} of {total}";
                    InvokeAsync(StateHasChanged);
                },
                cancellationToken: _syncDependenciesCts.Token);

            syncDependenciesProgressMessage = "Syncing dependencies...";
            await InvokeAsync(StateHasChanged);

            var updatedCount = await WorkspaceGitService.SyncDependenciesAsync(
                WorkspaceId,
                onProgress: (completed, total, _) =>
                {
                    syncDependenciesProgressMessage = $"Synced dependencies {completed} of {total}";
                    InvokeAsync(StateHasChanged);
                },
                cancellationToken: _syncDependenciesCts.Token);

            await LoadAsync();
        }
        catch (OperationCanceledException)
        {
            await LoadAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error syncing for workspace {WorkspaceId}", WorkspaceId);
            errorMessage = "Sync failed. The GrayMoon Agent may be offline. Start the Agent and try again.";
        }
        finally
        {
            isSyncingDependencies = false;
        }
    }
}
