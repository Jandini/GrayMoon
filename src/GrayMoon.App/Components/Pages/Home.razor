@page "/"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@using GrayMoon.App.Repositories
@using GrayMoon.App.Services
@inject WorkspaceRepository WorkspaceRepository
@inject NavigationManager NavigationManager
@inject IJSRuntime JsRuntime
@inject AgentConnectionTracker AgentConnectionTracker
<PageTitle>Home - GrayMoon</PageTitle>

@if (!showHome)
{
    <div class="container-fluid page-container">
        <div class="text-muted py-4">Loading...</div>
    </div>
}
else
{
<div class="container-fluid page-container">
    <div class="row mb-4 align-items-stretch">
        <div class="col-md-8 col-lg-8 d-flex mb-4 mb-md-0">
            <div class="jumbotron banner-card-style rounded p-4 border flex-grow-1 d-flex align-items-center">
                <img src="moon.svg" alt="GrayMoon" class="me-4" style="height: 80px; width: auto; flex-shrink: 0;" />
                <div>
                    <h1 class="display-5 mb-0 banner-title">
                        GrayMoon
                    </h1>
                    <p class="lead fs-6 mb-0 banner-subtitle">
                        Git version and .NET dependency orchestrator.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-lg-4 mb-4 mb-md-0">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-grid"></i> Workspaces
                    </h5>
                    <p class="card-text">
                        Group repositories into workspaces for quick access.
                    </p>
                    <a class="btn btn-primary" href="/workspaces">
                        Manage Workspaces
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-cpu"></i> Agent
                    </h5>
                    <p class="card-text">
                        Install, update, or uninstall the GrayMoon Agent service.
                    </p>
                    <a class="btn @AgentButtonClass" href="/agent">@AgentButtonText</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-plug"></i> Connectors
                    </h5>
                    <p class="card-text">
                        Configure access to GitHub and NuGet registries and manage connector tokens.
                    </p>
                    <a class="btn btn-primary" href="/connectors">
                        Manage Connectors
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-collection"></i> Repositories
                    </h5>
                    <p class="card-text">
                        Fetch and review repositories available from your connectors.
                    </p>
                    <a class="btn btn-primary" href="/repositories">
                        View Repositories
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
}

@code {
    private const string DefaultWorkspaceRedirectKey = "defaultWorkspaceRedirected";
    private bool showHome;

    private string AgentButtonText => AgentConnectionTracker.State switch
    {
        AgentConnectionState.Online => "Manage Agent",
        AgentConnectionState.VersionMismatch => "Upgrade Agent",
        _ => "Install Agent"
    };

    private string AgentButtonClass => AgentConnectionTracker.State == AgentConnectionState.Online ? "btn-primary" : "btn-danger";

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
            AgentConnectionTracker.OnStateChanged(_ => InvokeAsync(StateHasChanged));
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender || showHome)
        {
            return;
        }

        var alreadyRedirected = await JsRuntime.InvokeAsync<string?>(
            "sessionStorage.getItem",
            DefaultWorkspaceRedirectKey);

        if (string.Equals(alreadyRedirected, "true", StringComparison.OrdinalIgnoreCase))
        {
            showHome = true;
            await InvokeAsync(StateHasChanged);
            return;
        }

        var defaultWorkspace = await WorkspaceRepository.GetDefaultAsync();
        if (defaultWorkspace != null)
        {
            await JsRuntime.InvokeVoidAsync(
                "sessionStorage.setItem",
                DefaultWorkspaceRedirectKey,
                "true");
            NavigationManager.NavigateTo($"/workspaces/{defaultWorkspace.WorkspaceId}", replace: true);
            return;
        }

        showHome = true;
        await InvokeAsync(StateHasChanged);
    }
}
