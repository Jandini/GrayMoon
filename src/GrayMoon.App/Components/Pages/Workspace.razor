@page "/workspaces/{WorkspaceId:int}"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@using GrayMoon.App.Models
@using GrayMoon.App.Repositories
@using GrayMoon.App.Services
@using GrayMoon.App.Components.Shared
@inject WorkspaceRepository WorkspaceRepository
@inject WorkspaceGitService WorkspaceGitService
@inject ILogger<Workspace> Logger
@using WorkspaceModel = GrayMoon.App.Models.Workspace

<PageTitle>@(workspace?.Name ?? "Workspace")</PageTitle>

<div class="container-fluid page-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>@(workspace?.Name ?? "Workspace")</h2>
            <p class="text-muted mb-0" style="min-height: 1.5rem;">
                @if (repositories.Count > 0)
                {
                    @($"{repositories.Count} {(repositories.Count == 1 ? "repository" : "repositories")}")
                }
                &nbsp;
            </p>
        </div>
        <button class="btn btn-primary"
                @onclick="CloneAllAsync"
                disabled="@(isCloning || repositories.Count == 0)">
            @if (isCloning)
            {
                <span class="spinner-border spinner-border-sm me-2" aria-hidden="true"></span>
            }
            Clone
        </button>
    </div>

    @if (errorMessage != null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> @errorMessage
        </div>
    }
    else
    {
        <div class="card page-card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0 repositories-table">
                        <thead class="table-dark">
                            <tr>
                                <th class="col-repo">Repository</th>
                                <th class="col-owner">Owner</th>
                                <th class="col-visibility">Visibility</th>
                                <th class="col-connector">Connector</th>
                                <th class="col-gitversion">Git Version</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (isLoading)
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">
                                        Loading workspace...
                                    </td>
                                </tr>
                            }
                            else if (repositories.Count == 0)
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">
                                        No repositories assigned to this workspace.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var repository in repositories)
                                {
                                    <tr>
                                        <td class="col-repo"><strong>@repository.RepositoryName</strong></td>
                                        <td class="col-owner">@(string.IsNullOrWhiteSpace(repository.OrgName) ? "-" : repository.OrgName)</td>
                                        <td class="col-visibility">
                                            <span class="badge @(repository.Visibility == "Private" ? "badge-private" : "badge-public")">
                                                @repository.Visibility.ToLowerInvariant()
                                            </span>
                                        </td>
                                        <td class="col-connector">@(repository.GitHubConnector?.ConnectorName ?? "Unknown")</td>
                                        <td class="col-gitversion text-muted">@GetRepoVersion(repository.GitHubRepositoryId)</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

<LoadingOverlay IsVisible="@isLoading" Message="Loading workspace..." />
<LoadingOverlay IsVisible="@isCloning" Message="Cloning repositories..." />

@code {
    [Parameter] public int WorkspaceId { get; set; }

    private WorkspaceModel? workspace;
    private List<GitHubRepository> repositories = new();
    private IReadOnlyDictionary<int, string> repoVersions = new Dictionary<int, string>();
    private string? errorMessage;
    private bool isLoading = true;
    private bool isCloning = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadWorkspaceAsync();
    }

    private async Task LoadWorkspaceAsync()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            workspace = await WorkspaceRepository.GetByIdAsync(WorkspaceId);
            if (workspace == null)
            {
                errorMessage = "Workspace not found.";
                repositories = new List<GitHubRepository>();
                return;
            }

            repositories = workspace.Repositories
                .Select(link => link.GitHubRepository)
                .Where(repository => repository != null)
                .Select(repository => repository!)
                .OrderBy(repository => repository.RepositoryName)
                .ToList();

            _ = LoadVersionsAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading workspace {WorkspaceId}", WorkspaceId);
            errorMessage = "Failed to load workspace. Please try again later.";
            repositories = new List<GitHubRepository>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadVersionsAsync()
    {
        if (workspace == null || repositories.Count == 0)
        {
            return;
        }

        try
        {
            var versions = await WorkspaceGitService.GetVersionsAsync(WorkspaceId);
            repoVersions = versions;
            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            Logger.LogDebug(ex, "Error loading Git versions for workspace {WorkspaceId}", WorkspaceId);
        }
    }

    private string GetRepoVersion(int repositoryId)
    {
        return repoVersions.TryGetValue(repositoryId, out var version) ? version : "-";
    }

    private async Task CloneAllAsync()
    {
        if (workspace == null || repositories.Count == 0 || isCloning)
        {
            return;
        }

        try
        {
            isCloning = true;
            errorMessage = null;
            await WorkspaceGitService.CloneAllAsync(WorkspaceId);
            _ = LoadVersionsAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error cloning repositories for workspace {WorkspaceId}", WorkspaceId);
            errorMessage = "Failed to clone repositories. Please try again later.";
        }
        finally
        {
            isCloning = false;
        }
    }
}
