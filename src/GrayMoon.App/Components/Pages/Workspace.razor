@page "/workspaces/{WorkspaceId:int}"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@implements IDisposable
@using GrayMoon.App.Models
@using GrayMoon.App.Repositories
@using GrayMoon.App.Services
@using GrayMoon.App.Components.Shared
@inject WorkspaceRepository WorkspaceRepository
@inject WorkspaceGitService WorkspaceGitService
@inject ILogger<Workspace> Logger
@using WorkspaceModel = GrayMoon.App.Models.Workspace

<PageTitle>@(workspace?.Name ?? "Workspace")</PageTitle>

<div class="container-fluid page-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>@(workspace?.Name ?? "Workspace")</h2>
            <p class="text-muted mb-0" style="min-height: 1.5rem;">
                @if (repositories.Count > 0)
                {
                    @($"{repositories.Count} {(repositories.Count == 1 ? "repository" : "repositories")}")
                }
                &nbsp;
            </p>
        </div>
        <button class="btn @(isOutOfSync == null ? "btn-secondary" : isOutOfSync == true ? "btn-danger" : "btn-success")"
                @onclick="SyncAsync"
                disabled="@(isSyncing || repositories.Count == 0)">
            Sync
        </button>
    </div>

    @if (errorMessage != null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> @errorMessage
        </div>
    }
    else
    {
        <div class="card page-card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0 repositories-table">
                        <thead class="table-dark">
                            <tr>
                                <th class="col-repo">Repository</th>
                                <th class="col-version">Version</th>
                                <th class="col-branch">Branch</th>
                                <th class="col-sync">Status</th>
                                <th class="col-visibility">Visibility</th>
                                <th class="col-owner">Owner</th>
                                <th class="col-connector">Connector</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (isLoading)
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted py-4">
                                        Loading workspace...
                                    </td>
                                </tr>
                            }
                            else if (repositories.Count == 0)
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted py-4">
                                        No repositories assigned to this workspace.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var repository in repositories)
                                {
                                    <tr>
                                        <td class="col-repo"><strong>@repository.RepositoryName</strong></td>
                                        <td class="col-version text-muted">@GetRepoVersion(repository.GitHubRepositoryId)</td>
                                        <td class="col-branch text-muted">@GetRepoBranch(repository.GitHubRepositoryId)</td>
                                        <td class="col-sync">@GetRepoSyncBadge(repository.GitHubRepositoryId)</td>
                                        <td class="col-visibility">
                                            <span class="badge @(repository.Visibility == "Private" ? "badge-private" : "badge-public")">
                                                @repository.Visibility.ToLowerInvariant()
                                            </span>
                                        </td>
                                        <td class="col-owner">@(string.IsNullOrWhiteSpace(repository.OrgName) ? "-" : repository.OrgName)</td>
                                        <td class="col-connector">@(repository.GitHubConnector?.ConnectorName ?? "Unknown")</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

<LoadingOverlay IsVisible="@isLoading" Message="Loading workspace..." />
<LoadingOverlay IsVisible="@isSyncing" Message="Syncing..." />

@code {
    [Parameter] public int WorkspaceId { get; set; }

    private WorkspaceModel? workspace;
    private List<GitHubRepository> repositories = new();
    private IReadOnlyDictionary<int, RepoGitVersionInfo> repoGitInfos = new Dictionary<int, RepoGitVersionInfo>();
    private string? errorMessage;
    private bool isLoading = true;
    private bool isSyncing = false;
    private bool? isOutOfSync = null;
    private IReadOnlyDictionary<int, RepoSyncStatus>? repoSyncStatus;
    private CancellationTokenSource? _syncCheckCts;

    protected override async Task OnInitializedAsync()
    {
        await LoadWorkspaceAsync();
        _ = CheckSyncStatusAsync();
    }

    private async Task CheckSyncStatusAsync()
    {
        if (workspace == null || repositories.Count == 0)
        {
            return;
        }

        _syncCheckCts?.Cancel();
        _syncCheckCts = new CancellationTokenSource();

        try
        {
            var status = await WorkspaceGitService.GetRepoSyncStatusAsync(WorkspaceId, _syncCheckCts.Token);
            repoSyncStatus = status;
            isOutOfSync = status.Values.Any(v => v != RepoSyncStatus.InSync);
            await InvokeAsync(StateHasChanged);
        }
        catch (OperationCanceledException)
        {
            // Check was cancelled, ignore
        }
        catch (Exception ex)
        {
            Logger.LogWarning(ex, "Error checking sync status for workspace {WorkspaceId}", WorkspaceId);
            isOutOfSync = true;
            await InvokeAsync(StateHasChanged);
        }
    }

    public void Dispose()
    {
        _syncCheckCts?.Cancel();
        _syncCheckCts?.Dispose();
    }

    private async Task LoadWorkspaceAsync()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            workspace = await WorkspaceRepository.GetByIdAsync(WorkspaceId);
            if (workspace == null)
            {
                errorMessage = "Workspace not found.";
                repositories = new List<GitHubRepository>();
                return;
            }

            repositories = workspace.Repositories
                .Select(link => link.GitHubRepository)
                .Where(repository => repository != null)
                .Select(repository => repository!)
                .OrderBy(repository => repository.RepositoryName)
                .ToList();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading workspace {WorkspaceId}", WorkspaceId);
            errorMessage = "Failed to load workspace. Please try again later.";
            repositories = new List<GitHubRepository>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetRepoVersion(int repositoryId)
    {
        var repo = repositories.FirstOrDefault(r => r.GitHubRepositoryId == repositoryId);
        return repo?.GitVersion ?? "-";
    }

    private string GetRepoBranch(int repositoryId)
    {
        var repo = repositories.FirstOrDefault(r => r.GitHubRepositoryId == repositoryId);
        return repo?.BranchName ?? "-";
    }

    private RenderFragment GetRepoSyncBadge(int repositoryId) => builder =>
    {
        if (repoSyncStatus?.TryGetValue(repositoryId, out var status) == true)
        {
            var (text, bgColor) = status switch
            {
                RepoSyncStatus.InSync => ("in sync", "#198754"),
                RepoSyncStatus.NotCloned => ("not cloned", "#6c757d"),
                RepoSyncStatus.VersionMismatch => ("version", "#dc3545"),
                _ => ("sync", "#6c757d")
            };
            builder.OpenElement(0, "span");
            builder.AddAttribute(1, "class", "badge");
            builder.AddAttribute(2, "style", $"background-color: {bgColor}; color: #fff;");
            builder.AddContent(3, text);
            builder.CloseElement();
        }
    };

    private async Task SyncAsync()
    {
        if (workspace == null || repositories.Count == 0 || isSyncing)
        {
            return;
        }

        _syncCheckCts?.Cancel();
        isSyncing = true;
        errorMessage = null;
        StateHasChanged();
        await Task.Yield();

        try
        {

            var results = await WorkspaceGitService.SyncAsync(WorkspaceId);
            repoGitInfos = results;

            foreach (var repo in repositories)
            {
                if (repoGitInfos.TryGetValue(repo.GitHubRepositoryId, out var info))
                {
                    repo.GitVersion = info.Version == "-" ? null : info.Version;
                    repo.BranchName = info.Branch == "-" ? null : info.Branch;
                }
            }

            isOutOfSync = false;
            repoSyncStatus = repositories.ToDictionary(r => r.GitHubRepositoryId, _ => RepoSyncStatus.InSync);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error syncing workspace {WorkspaceId}", WorkspaceId);
            errorMessage = "Failed to sync. Please try again later.";
        }
        finally
        {
            isSyncing = false;
        }
    }
}
