@page "/workspaces"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@implements IDisposable
@using GrayMoon.App.Models
@using WorkspaceModel = GrayMoon.App.Models.Workspace
@using GrayMoon.App.Repositories
@using GrayMoon.App.Services
@using GrayMoon.App.Components.Shared
@using GrayMoon.App.Components.Modals
@inject WorkspaceRepository WorkspaceRepository
@inject GitHubConnectorRepository ConnectorRepository
@inject GitHubRepositoryService RepositoryService
@inject WorkspaceService WorkspaceService
@inject ILogger<Workspaces> Logger

<PageTitle>Workspaces - GrayMoon</PageTitle>

<div class="container-fluid page-container grid-page">
    <div class="grid-page-header">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2>Workspaces</h2>
                <p class="text-muted mb-0" style="min-height: 1.5rem;">
                    @if (workspaces?.Count > 0)
                    {
                        @($"{workspaces.Count} {(workspaces.Count == 1 ? "workspace" : "workspaces")}")
                    }
                    &nbsp;
                </p>
            </div>
            <button class="btn btn-primary" @onclick="ShowCreateModalAsync">
                Add Workspace
            </button>
        </div>
        @if (errorMessage != null)
        {
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-triangle"></i> @errorMessage
            </div>
        }
    </div>
    @if (errorMessage == null)
    {
        <div class="grid-page-body">
            <div class="card page-card mb-4">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0 workspaces-table">
                        <thead class="table-dark">
                            <tr>
                                <th class="col-name">Name</th>
                                <th class="col-path">Path</th>
                                <th class="col-count">Repos</th>
                                <th class="col-count">Projects</th>
                                <th class="col-actions">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (workspaces == null)
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">
                                        Loading workspaces...
                                    </td>
                                </tr>
                            }
                            else if (workspaces.Count == 0)
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">
                                        No workspaces found. Add your first workspace to get started.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var workspace in workspaces)
                                {
                                    <tr>
                                        <td class="col-name">
                                            <div class="d-flex align-items-center">
                                                <button class="btn btn-sm btn-link default-star-button me-2 d-flex align-items-center"
                                                        @onclick="() => ToggleDefaultAsync(workspace.WorkspaceId, workspace.Name)"
                                                        disabled="@isTogglingDefault"
                                                        title="Toggle default workspace">
                                                    @if (workspace.IsDefault)
                                                    {
                                                        <i class="bi bi-star-fill default-star-icon" aria-hidden="true"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-star default-star-icon" aria-hidden="true"></i>
                                                    }
                                                </button>
                                                <NavLink class="link-primary text-decoration-none"
                                                         href="@($"workspaces/{workspace.WorkspaceId}")">
                                                    <strong>@workspace.Name</strong>
                                                </NavLink>
                                                @if (workspace.IsDefault)
                                                {
                                                    <span class="badge badge-default ms-2">Default</span>
                                                }
                                            </div>
                                        </td>
                                        <td class="col-path text-muted">@WorkspaceService.GetWorkspacePath(workspace.Name)</td>
                                        <td class="col-count">@workspace.Repositories.Count</td>
                                        <td class="col-count">@workspace.Repositories.Sum(r => r.Projects ?? 0)</td>
                                        <td class="col-actions">
                                            <button class="btn btn-sm btn-outline-primary me-2"
                                                    @onclick="() => ShowEditModalAsync(workspace.WorkspaceId)">
                                                Edit
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger me-2"
                                                    @onclick="() => ShowDeleteModal(workspace)">
                                                Delete
                                            </button>
                                            <button class="btn btn-sm btn-outline-secondary me-2"
                                                    @onclick="() => ShowAddRepositoriesModalAsync(workspace.WorkspaceId)">
                                                Repositories
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        </div>
    }
</div>

<WorkspaceModal IsVisible="@showEditorModal"
               Title="@editorTitle"
               WorkspaceName="@workspaceName"
               WorkspaceNameChanged="@OnWorkspaceNameChangedAsync"
               WorkspacePath="@GetWorkspacePath()"
               DirectoryAlreadyExists="@directoryExists"
               ExistingRepositoryCount="@existingRepositoryCount"
               IsNameDisabled="false"
               IsSaving="@isSaving"
               ErrorMessage="@editorErrorMessage"
               OnSave="@SaveWorkspaceAsync"
               OnCancel="@CloseEditorModal" />

<WorkspaceRepositoriesModal IsVisible="@showRepositoriesModal"
                            Title="@($"Select repositories for {repositoriesModalWorkspaceName}")"
                            Repositories="@repositories"
                            SelectedRepositoryIds="@selectedRepositoryIds"
                            HasConnectors="@hasConnectors"
                            IsSaving="@isSavingRepositories"
                            IsFetching="@isPersisting"
                            ErrorMessage="@repositoriesModalErrorMessage"
                            OnSave="@SaveRepositoriesAsync"
                            OnCancel="@CloseRepositoriesModal"
                            OnFetchRepositories="@FetchRepositoriesAsync" />

@if (showDeleteModal)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);"
         @onkeydown="HandleDeleteModalKeyDown">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Workspace</h5>
                    <button type="button" class="btn-close" @onclick="CloseDeleteModal"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-0">Delete workspace <strong>@workspaceToDelete?.Name</strong>?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseDeleteModal">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteWorkspaceAsync" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<LoadingOverlay IsVisible="@isPersisting" Message="@(fetchedRepositoryCount is null || fetchedRepositoryCount == 0 ? "Fetching repositories..." : $"Fetched {fetchedRepositoryCount} {(fetchedRepositoryCount == 1 ? "repository" : "repositories")}...")" OnAbort="AbortFetchRepositories" />

@code {
    private List<WorkspaceModel>? workspaces;
    private List<GitHubRepositoryEntry>? repositories;
    private string? errorMessage;
    private bool showEditorModal;
    private bool showRepositoriesModal;
    private bool showDeleteModal;
    private bool isSaving;
    private bool isSavingRepositories;
    private bool isDeleting;
    private bool isPersisting;
    private bool isTogglingDefault;
    private bool hasConnectors;
    private string workspaceName = string.Empty;
    private string repositoriesModalWorkspaceName = string.Empty;
    private string? editorErrorMessage;
    private string? repositoriesModalErrorMessage;
    private string editorTitle = "Add Workspace";
    private int? editingWorkspaceId;
    private HashSet<int> editingWorkspaceRepositoryIds = new();
    private WorkspaceModel? workspaceToDelete;
    private HashSet<int> selectedRepositoryIds = new();
    private int? fetchedRepositoryCount;
    private CancellationTokenSource? _fetchRepositoriesCts;
    private bool directoryExists;
    private int existingRepositoryCount;
    private CancellationTokenSource? _directoryInfoCts;

    public void Dispose()
    {
        _fetchRepositoriesCts?.Cancel();
        _fetchRepositoriesCts?.Dispose();
        _directoryInfoCts?.Cancel();
        _directoryInfoCts?.Dispose();
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadWorkspacesAsync();
    }

    private async Task LoadWorkspacesAsync()
    {
        try
        {
            errorMessage = null;
            workspaces = await WorkspaceRepository.GetAllAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading workspaces");
            errorMessage = "Failed to load workspaces. Please try again later.";
            workspaces = new List<WorkspaceModel>();
        }
    }

    private async Task EnsureRepositoriesAsync()
    {
        if (repositories != null)
        {
            return;
        }

        var connectors = await ConnectorRepository.GetAllAsync();
        hasConnectors = connectors.Count > 0;
        repositories = await RepositoryService.GetPersistedRepositoriesAsync();

        if (hasConnectors && repositories.Count == 0)
        {
            await FetchRepositoriesAsync();
        }
    }

    private Task ShowCreateModalAsync()
    {
        editingWorkspaceId = null;
        editorTitle = "Add Workspace";
        workspaceName = string.Empty;
        directoryExists = false;
        existingRepositoryCount = 0;
        editorErrorMessage = null;
        showEditorModal = true;
        return Task.CompletedTask;
    }

    private async Task ShowEditModalAsync(int workspaceId)
    {
        var workspace = await WorkspaceRepository.GetByIdAsync(workspaceId);
        if (workspace == null)
        {
            return;
        }

        editingWorkspaceId = workspaceId;
        editorTitle = "Edit Workspace";
        workspaceName = workspace.Name;
        editorErrorMessage = null;
        editingWorkspaceRepositoryIds = workspace.Repositories
            .Select(link => link.GitHubRepositoryId)
            .ToHashSet();
        showEditorModal = true;
        await LoadDirectoryInfoAsync();
    }

    private async Task ShowAddRepositoriesModalAsync(int workspaceId)
    {
        var workspace = await WorkspaceRepository.GetByIdAsync(workspaceId);
        if (workspace == null)
        {
            return;
        }

        editingWorkspaceId = workspaceId;
        repositoriesModalWorkspaceName = workspace.Name;
        repositoriesModalErrorMessage = null;
        selectedRepositoryIds = workspace.Repositories
            .Select(link => link.GitHubRepositoryId)
            .ToHashSet();
        await EnsureRepositoriesAsync();
        showRepositoriesModal = true;
    }

    private void CloseEditorModal()
    {
        showEditorModal = false;
        editorErrorMessage = null;
    }

    private void CloseRepositoriesModal()
    {
        showRepositoriesModal = false;
        repositoriesModalErrorMessage = null;
    }

    private async Task SaveWorkspaceAsync()
    {
        if (string.IsNullOrWhiteSpace(workspaceName))
        {
            editorErrorMessage = "Workspace name is required.";
            return;
        }

        try
        {
            isSaving = true;
            editorErrorMessage = null;

            if (editingWorkspaceId == null)
            {
                Logger.LogInformation("User created workspace {WorkspaceName}", workspaceName);
                await WorkspaceRepository.AddAsync(workspaceName, []);
            }
            else
            {
                Logger.LogInformation("User edited workspace {WorkspaceName}", workspaceName);
                await WorkspaceRepository.UpdateAsync(editingWorkspaceId.Value, workspaceName, editingWorkspaceRepositoryIds);
            }

            CloseEditorModal();
            await LoadWorkspacesAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving workspace");
            editorErrorMessage = ex.Message;
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task SaveRepositoriesAsync()
    {
        if (editingWorkspaceId == null) return;
        if (isSavingRepositories) return;

        if (selectedRepositoryIds.Count == 0)
        {
            repositoriesModalErrorMessage = "Select at least one repository.";
            return;
        }

        isSavingRepositories = true;
        repositoriesModalErrorMessage = null;
        await InvokeAsync(StateHasChanged);

        try
        {
            Logger.LogInformation("User added {Count} repositories to workspace {WorkspaceName}", selectedRepositoryIds.Count, repositoriesModalWorkspaceName);
            await WorkspaceRepository.UpdateAsync(editingWorkspaceId.Value, repositoriesModalWorkspaceName, selectedRepositoryIds);

            CloseRepositoriesModal();
            await LoadWorkspacesAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving repositories");
            repositoriesModalErrorMessage = ex.Message;
        }
        finally
        {
            isSavingRepositories = false;
        }
    }

    private void ShowDeleteModal(WorkspaceModel workspace)
    {
        workspaceToDelete = workspace;
        showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        workspaceToDelete = null;
    }

    private async Task HandleDeleteModalKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Escape")
        {
            CloseDeleteModal();
        }
        else if (e.Key == "Enter")
        {
            await DeleteWorkspaceAsync();
        }
    }

    private async Task DeleteWorkspaceAsync()
    {
        if (workspaceToDelete == null)
        {
            return;
        }

        try
        {
            isDeleting = true;
            Logger.LogInformation("User deleted workspace {WorkspaceName}", workspaceToDelete.Name);
            await WorkspaceRepository.DeleteAsync(workspaceToDelete.WorkspaceId);
            CloseDeleteModal();
            await LoadWorkspacesAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting workspace");
            errorMessage = "Failed to delete workspace. Please try again later.";
        }
        finally
        {
            isDeleting = false;
        }
    }

    private void AbortFetchRepositories()
    {
        _fetchRepositoriesCts?.Cancel();
    }

    private async Task FetchRepositoriesAsync()
    {
        if (!hasConnectors || isPersisting)
        {
            return;
        }

        _fetchRepositoriesCts?.Cancel();
        _fetchRepositoriesCts = new CancellationTokenSource();

        try
        {
            isPersisting = true;
            fetchedRepositoryCount = null;
            repositoriesModalErrorMessage = null;
            await InvokeAsync(StateHasChanged);

            var progress = new Progress<int>(count =>
            {
                fetchedRepositoryCount = count;
                _ = InvokeAsync(StateHasChanged);
            });
            var result = await RepositoryService.RefreshRepositoriesAsync(progress, _fetchRepositoriesCts.Token);
            repositories = result.Repositories.ToList();
        }
        catch (OperationCanceledException)
        {
            repositories = await RepositoryService.GetPersistedRepositoriesAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error fetching repositories");
            repositoriesModalErrorMessage = "Failed to fetch repositories. Please try again later.";
            repositories = new List<GitHubRepositoryEntry>();
        }
        finally
        {
            isPersisting = false;
        }
    }

    private async Task ToggleDefaultAsync(int workspaceId, string workspaceName)
    {
        try
        {
            isTogglingDefault = true;
            errorMessage = null;
            Logger.LogInformation("User toggled default workspace {WorkspaceName}", workspaceName);
            await WorkspaceRepository.ToggleDefaultAsync(workspaceId);
            await LoadWorkspacesAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error toggling default workspace");
            errorMessage = "Failed to update default workspace. Please try again later.";
        }
        finally
        {
            isTogglingDefault = false;
        }
    }

    private string GetWorkspacePath()
    {
        if (string.IsNullOrWhiteSpace(workspaceName))
            return WorkspaceService.RootPath;
        return WorkspaceService.GetWorkspacePath(workspaceName);
    }

    private async Task OnWorkspaceNameChangedAsync(string value)
    {
        workspaceName = value;
        await LoadDirectoryInfoAsync();
    }

    private async Task LoadDirectoryInfoAsync()
    {
        if (string.IsNullOrWhiteSpace(workspaceName))
        {
            directoryExists = false;
            existingRepositoryCount = 0;
            StateHasChanged();
            return;
        }

        _directoryInfoCts?.Cancel();
        _directoryInfoCts = new CancellationTokenSource();
        var ct = _directoryInfoCts.Token;

        try
        {
            var existsTask = WorkspaceService.DirectoryExistsAsync(workspaceName, ct);
            var countTask = WorkspaceService.GetRepositoryCountAsync(workspaceName, ct);
            directoryExists = await existsTask;
            existingRepositoryCount = await countTask;
        }
        catch (OperationCanceledException) { }
        catch (Exception ex)
        {
            Logger.LogDebug(ex, "Failed to load directory info for {WorkspaceName}", workspaceName);
            directoryExists = false;
            existingRepositoryCount = 0;
        }
        finally
        {
            await InvokeAsync(StateHasChanged);
        }
    }
}
